    "express-validator": "^6.10.1",
    "gravatar": "^1.8.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.6",
    "mongoose": "^5.12.7",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "request": "^2.88.2",
    "validator": "^9.4.1"
  },
  "devDependencies": {
    "concurrently": "^3.6.1",
